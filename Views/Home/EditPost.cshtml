@model Proyecto_Api.DTO.PostDTO

@{
    ViewData["Title"] = "Editar Post";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditPost" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />

    <div class="form-group">
        <label for="userId">ID del Usuario</label>
        <input type="number" class="form-control" id="userId" name="UserId" required value="@Model.UserId">
    </div>
    <div class="form-group">
        <label for="title">TÃ­tulo</label>
        <input type="text" class="form-control" id="title" name="Title" required value="@Model.Title">
    </div>
    <div class="form-group">
        <label for="body">Cuerpo</label>
        <textarea class="form-control" id="body" name="Body" rows="5" required>@Model.Body</textarea>
