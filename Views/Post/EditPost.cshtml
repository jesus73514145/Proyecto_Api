@model Proyecto_Api.DTO.PostDTO
@using System.Collections.Generic;
@using Microsoft.AspNetCore.Mvc.ViewFeatures
@{
    ViewData["Title"] = "Editar Post";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Post" asp-action="EditPost" method="post">
    <input type="hidden" asp-for="id" />

    <div class="form-group">
        <label asp-for="userId">ID del Usuario</label>
        <input type="number" class="form-control" asp-for="userId" required/>
    </div>
    <div class="form-group">
        <label asp-for="title">TÃ­tulo</label>
        <input type="text" class="form-control" asp-for="title" required/>
    </div>
    <div class="form-group">
        <label asp-for="body">Cuerpo</label>
        <textarea class="form-control" asp-for="body" rows="5" required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
</form>

<br>
@if (TempData["Excelente"] != null)
{
  <div class="alert alert-success" style="font-size: 22px; padding: 10px;">
    @TempData["Excelente"]
  </div>
}